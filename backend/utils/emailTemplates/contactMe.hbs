<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Client Inquiry</title>
    <style>
      body { font-family: Arial, sans-serif; color: #333; background-color:
      #f9f9f9; margin: 0; padding: 0; } .container { background-color: #ffffff;
      border: 1px solid #eee; border-left: 4px solid #e27a82; padding: 24px;
      max-width: 600px; margin: 40px auto; border-radius: 8px; } .header {
      text-align: center; margin-bottom: 20px; } .header h1 { font-size: 20px;
      font-weight: bold; color: #e27a82; margin-top: 10px; margin-bottom: 20px;
      text-align: center; } .details { margin-bottom: 20px; } .details p {
      margin: 10px 0; } .details a { color: #0066cc; text-decoration: underline;
      word-break: break-word; } .footer { font-size: 13px; color: #777;
      text-align: center; margin-top: 40px; border-top: 1px solid #eee;
      padding-top: 16px; }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Header with Logo + Fallback -->
      <div class="header">
        <div style="height: 100px; margin-bottom: 20px; text-align: center">
          <a
            href="{{frontend_url}}"
            target="_blank"
            style="display: inline-block"
          >
            <img
              src="{{frontend_url}}/logo.png"
              alt="Fatima's Therapy Services"
              width="100"
              height="100"
              style="max-height: 100%; display: block; margin: 0 auto"
              onerror="this.style.display='none'; this.parentElement.innerHTML='<div style=\'color:#E27A82;font-size:18px;font-weight:bold;\'>Fatima's Therapy Services</div>';"
            />
          </a>
        </div>
        <h1>New Client Inquiry</h1>
      </div>

      <!-- Inquiry Details -->
      <div class="details">
        <p><strong>Name:</strong> {{name}}</p>
        <p><strong>Inquiry Type:</strong> {{type}}</p>
        <p><strong>Email:</strong> <a href="mailto:{{email}}">{{email}}</a></p>
        <p><strong>Phone:</strong> {{phone}}</p>
        <p><strong>Message:</strong><br />{{message}}</p>
        <p><em>To respond, just hit "Reply" on this email.</em></p>
      </div>

      <!-- Footer -->
      <div class="footer">
        Regards,<br />
        Fatima's Therapy Services<br />
        &copy;
        {{currentYear}}
        All rights reserved.
      </div>
    </div>
  </body>
</html>